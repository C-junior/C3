<% title "Modelos página Create/edit" %>

<!-- INDEX -->
<div class="row">
  <div class="col s12 m12 l12">
    <div id="Form-advance" class="card card card-default scrollspy">
      <div class="card-content">
        <form class="col s12">
          <div class="row">
            <div class="input-field col m6 s12">
              <input id="first_name01" type="text">
              <label for="first_name01">Nome</label>
            </div>
            <div class="input-field col m6 s12">
              <input id="last_name" type="text">
              <label for="last_name">Sobrenome</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="email5" type="email">
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input id="password6" type="password">
              <label for="password">Senha</label>
            </div>
          </div>
          <div class="row">
            <div class="col m6 s12">
              <label>Perfil</label>
              <select>
                <option value="" disabled selected>Escolha um perfil</option>
                <option value="1">Gerente</option>
                <option value="2">Desenvolvedor</option>
                <option value="3">Negócios</option>
              </select>
              
            </div>
            <div class="col m6 s12">
              <label for="dob">Data</label>
              <input type="date" class="datepicker" id="dob">
            </div>
          </div>
          <div class="row">
            <div class="col m6 s12 file-field input-field">
              <div class="btn float-right">
                <span>Arquivo</span>
                <input type="file">
              </div>
              <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
              </div>
            </div>
            <div class="col m6 s12">
              <label for="text5">Range</label>
              <p class="range-field">
                <input type="range" id="test5" min="0" max="100" />
              </p>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <textarea id="message5" class="materialize-textarea"></textarea>
              <label for="message">Mais informação</label>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <button class="btn verde-to waves-effect waves-light right" type="submit" name="action">Salvar
                  <i class="material-icons right">save</i>
                </button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


